{
    "name": "KcELECTRA_Text_Model",
    "n_gpu": 1,

    "arch": {
        "type": "KcELECTRAModel",
        "args": {
            "model_name": "beomi/KcELECTRA-base-v2022"
        }
    },

    "data": {
        "train_file": "C:\\Users\\12sta\\Downloads\\data (2)\\train.csv",
        "max_length": 128
    },
    "data_loader": {
        "type": "TextDataLoader",
        "args": {
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "max_length": 128,
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 5e-5,
            "weight_decay": 0.01,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 3,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 3,
        "tensorboard": true
    }
}
